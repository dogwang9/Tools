<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".reactiontest.ReactionTestActivity">

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/iv_area"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginVertical="20dp"
        android:layout_marginEnd="40dp"
        android:background="@color/reaction_test_area_normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:round="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/reaction_test_instruction"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/iv_area"
        app:layout_constraintEnd_toEndOf="@+id/iv_area"
        app:layout_constraintStart_toStartOf="@id/iv_area"
        app:layout_constraintTop_toTopOf="@id/iv_area" />

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:textColor="@color/text_main"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/iv_area"
        app:layout_constraintEnd_toStartOf="@id/iv_area"
        app:layout_constraintTop_toTopOf="@id/iv_area" />

</androidx.constraintlayout.widget.ConstraintLayout>